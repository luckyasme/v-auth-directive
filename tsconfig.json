{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": false,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./types",
    "lib": ["esnext", "dom"],
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
